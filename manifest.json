{
    "manifest_version": 3,
    "name": "Auto Tab Closer",
    "description": "Fixing too many open tabs! Pin the tabs you want to keep and close long inactive tabs while saving the links for later.",
    "version": "1.0.0",
    "permissions": [
        "tabs", 
        "storage", 
        "notifications", 
        "alarms",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
